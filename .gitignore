# Ignore directories generated by Composer
/vendor/
/recipes/

# Ignore scaffold files
/web/*

# Allow custom modules and themes
!web/modules/
web/modules/*
!web/modules/custom/
!web/themes/
web/themes/*
!web/themes/custom/

# Allow site settings
!web/sites
web/sites/*
!web/sites/development.services.yml
!web/sites/sites.php
!web/sites/default
web/sites/default/*
!web/sites/default/settings.php
!web/sites/default/services.yml
!web/sites/default/example.settings.local.php

# Ignore .env files
.env
.env.local
.env.*.local

# Ignore OS generated files
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# Ignore editor backup files
*~
*.swp
*.swo

# Ignore temporary files
*.tmp
*.temp

# Ignore log files
*.log

# Ignore database dumps
*.sql
*.sql.gz

# Ignore node modules and build artifacts
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore IDE configuration
.vscode/
